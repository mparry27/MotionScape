<Window x:Class="KinectMathGames.Gui.Graph"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectMathGames.Gui"
        mc:Ignorable="d"
        Title="Graph" Height="450" Width="800" FocusManager.FocusedElement="{Binding ElementName=MyCanvas}">
    <Grid>
        <Image Source="images/Grid.jpg"></Image>
        <Canvas Name="MyCanvas" Focusable="True" >
            <Ellipse Name="rec1" Width="20" Height="20" Margin="0" Canvas.Left="380" Canvas.Top="200">
                <Ellipse.Fill>
                    <SolidColorBrush Color="#7FE22B2B" />
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>
    </Grid>
</Window>
