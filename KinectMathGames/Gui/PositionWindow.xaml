<Window x:Class="KinectMathGames.PositionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectMathGames"
        mc:Ignorable="d"
        Title="PositionWindow" Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Images/gridBackground.png" Stretch="Uniform"/>
        </Grid.Background>
        <Slider x:Name="sldrPosition" HorizontalAlignment="Left" Margin="389,10,0,0" VerticalAlignment="Top" Minimum="1" Maximum="3" Height="400" IsDirectionReversed="True" Orientation="Vertical" Value="{Binding Position}"/>
    </Grid>

</Window>
