<Window x:Class="KinectMathGames.PositionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectMathGames"
        mc:Ignorable="d"
        Title="PositionWindow" Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Images/Graph.jpg" Stretch="Uniform"/>
        </Grid.Background>
        <Canvas Name="MyCanvas" Focusable="True" >
            <Ellipse Name="rec1" Width="20" Height="20" Margin="0" Canvas.Left="380" Canvas.Top="208">
                <Ellipse.Fill>
                    <SolidColorBrush Color="#7FE22B2B" />
                </Ellipse.Fill>
            </Ellipse>
            <Label Name="txtscore" FontSize="30" FontWeight="Bold" Content="Score : 0" RenderTransformOrigin="5.441,1.98" Canvas.Top="36"/>
            <Label Name="Position" FontSize="30" FontWeight="ExtraBold" Content="Position Game"/>
        </Canvas>
    </Grid>

</Window>
