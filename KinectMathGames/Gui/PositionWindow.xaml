<Window x:Class="KinectMathGames.PositionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectMathGames"
        mc:Ignorable="d"
        Title="PositionWindow" Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Images/Graph.jpg" Stretch="Uniform"/>
        </Grid.Background>
        <Slider x:Name="sldrPosition" HorizontalAlignment="Left" Margin="381,40,0,0" VerticalAlignment="Top" Minimum="1" Maximum="3" Height="355" IsDirectionReversed="True" Orientation="Vertical" Value="{Binding Position}"/>
    </Grid>

</Window>
