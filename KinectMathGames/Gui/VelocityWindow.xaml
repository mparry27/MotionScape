<Window x:Class="KinectMathGames.Velocity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectMathGames"
        mc:Ignorable="d"
        Title="Velocity Game" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="MyCanVas" Focusable="True" Background="AliceBlue" RenderTransformOrigin="0.175,0.488" Margin="0,10,0.333,-10.333">

            <Image Height="25" Width="50" Source="Images/circle.png" Tag="obs1" Canvas.Left="200" Canvas.Top="223" />
            <Image Height="24" Width="50" Source="Images/circle.png" Tag="obs1" Canvas.Left="200" Canvas.Top="158" RenderTransformOrigin="0.513,1.867" />

            <Image Height="25" Width="50" Source="Images/circle.png" Tag="obs2" Canvas.Left="500" Canvas.Top="330" RenderTransformOrigin="0.667,-0.27" />
            <Image Height="25" Width="50" Source="Images/circle.png" Tag="obs2" Canvas.Left="500" Canvas.Top="268" RenderTransformOrigin="0.54,1.733" />

            <Image Height="25" Width="50" Source="Images/circle.png" Tag="obs3" Canvas.Left="800" Canvas.Top="132" RenderTransformOrigin="0.567,-0.373" />
            <Image Height="24" Width="50" Source="Images/circle.png" Tag="obs3" Canvas.Left="800" Canvas.Top="55" RenderTransformOrigin="-12.22,4.028" />

            <Slider x:Name="sldrVelocity" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Vertical" Height="300" Width="22" Minimum="-1" Maximum="1"  Canvas.Left="43" Canvas.Top="55" RenderTransformOrigin="0.432,0.497">
                <Slider.Effect>
                    <DropShadowEffect/>
                </Slider.Effect>
            </Slider>

            <Label Name="txtscore" FontSize="30" FontWeight="Bold" Content="Score : 0" RenderTransformOrigin="5.441,1.98" Canvas.Top="36"/>
            <Label Name="Velocity" FontSize="30" FontWeight="ExtraBold" Content="Velocity Game"/>

        </Canvas>

    </Grid>
</Window>
